@model ZamiuxFixer.Application.ViewModels.Account.ChangePasswordVM
@{
    ViewData["Title"] = "تغییر رمز عبور";
    Layout = "~/Areas/UserPanel/Views/Shared/_UserPanelLayout.cshtml";
}

<div class="account-content-layer layer-style">
    <h3> @ViewData["Title"]  </h3>
    <div class="inner">
        <form class="form-layer-style" method="post" asp-action="ChangePassword" asp-controller="Home" asp-area="UserPanel">
            <div class="row">

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <!-- input -->
                    <div class="input-layer">
                        <label><i class="icon-lock"></i>  رمز عبور فعلی </label>
                        <input type="password" asp-for="OldPassword">
                        <span asp-validation-for="OldPassword"> </span>
                    </div>
                    <!--/ input -->
                </div>

                <div class="col-md-6 col-sm-12 col-xs-12">
                    <!-- input -->
                    <div class="input-layer">
                        <label><i class="icon-lock"></i> تکرار رمز عبور جدید </label>
                        <input type="password" asp-for="NewPassword">
                        <span asp-validation-for="NewPassword"> </span>
                    </div>
                    <!-- /input -->
                </div>

                <div class="col-md-6 col-sm-12 col-xs-12">
                    <!-- input -->
                    <div class="input-layer">
                        <label><i class="icon-lock"></i> رمز عبور جدید </label>
                        <input type="password" asp-for="ReNewPassword">
                        <span asp-validation-for="ReNewPassword"> </span>
                    </div>
                    <!--/ input -->
                </div>


                @if (ViewBag.isChangePassword == true)
                {
                    <div class="col-xs-12">
                        <div class="alert alert-success">
                            <p> رمز عبور حساب کاربری شما با موفقیت بروز شد </p>
                        </div>
                    </div>
                }


                <div class="col-md-3 col-sm-3 col-xs-12 pull-left">
                    <button class="submit-button green"> تغییر رمز عبور </button>
                </div>

            </div>

        </form>
    </div>
</div>

