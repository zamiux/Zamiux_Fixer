@model ZamiuxFixer.Application.ViewModels.Account.RegisterVM
@{
    ViewData["Title"] = "ثبت نام";
}

<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> باگ فیکسر - @ViewData["Title"] </title>
    <partial name="_HeaderRefrences" />
    <link rel="stylesheet" type="text/css" href="/css/user.css">
    <script src="/js/jquery.min.js"></script>
</head>
<body>
    <script src="/js/modernizr.js"></script>

    <header class="main-header">
        <div class="container">
            <nav>
                <span><i class="icon-menu-2"></i></span>
                <div class="inner">
                    <ul>
                        <li><a href=""> تگ ها </a></li>
                        <li><a href=""> پرسش و پاسخ ها </a></li>
                        <li><a href=""> کاربران </a></li>
                        <li><a href=""> راهنمای سایت </a></li>
                    </ul>
                    <partial name="_Nav" />
                </div>
            </nav>

            <a href="" class="logo"><img src="images/logo-dark.svg"></a>

            <div class="clearfix"></div>
        </div>
    </header>

    <div class="user-page-style">

        <div class="breadcumb-layer">
            <div class="container">
                <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> باگ فیکسر </span></a></li>
                    <li itemtype="http://schema.org/ListItem" itemscope itemprop="itemListElement"><a href="/Register" itemprop="item"><span itemprop="name"> ثبت نام در سایت </span></a></li>
                </ul>
            </div>
        </div>

        <div class="user-page">

            <div class="container">

                <div class="row">

                    <div class="col-md-7 col-sm-12 col-xs-12 pull-left">

                        <div class="inner">
                            <div class="description">
                                <p> لطفا به هنگام ثبت نام به موارد زیر توجه فرمایید  </p>
                                <ul>
                                    <li>ابتدا <a href="">قوانین و شرایط</a> عضویت در سامانه را با دقت مطالعه نموده و سپس اقدام به ثبت نام در سامانه نمایید .</li>
                                    <li>لطفا مشخصات و شماره موبایل خود را با دقت و بطور صحیح وارد نمایید .</li>
                                    <li>رمز عبور به سامانه پس از عضویت به شماره موبایل شما ارسال خواهد شد .</li>
                                    <li>پس از ورود به حساب کاربری خود ، جهت حفظ امنیت بیشتر حساب کاربری ، لطفا رمز عبور خود را تغییر دهید .</li>
                                </ul>

                                <div class="register-link">
                                    <i class="icon-login"></i> در صورتی که قبلا ثبت نام کرده اید ،  به حساب کاربری خود <a href="/Login"> وارد شوید </a> .
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-5 col-sm-12 col-xs-12 pull-right">

                        <form asp-area="" asp-controller="Account" asp-action="Register" method="post" class="shadow-style">

                            <div class="inner">
                                @if (ViewBag.SuccessRegister != null)
                                {

                                    <div class="alert alert-primary">
                                        @if ((bool)ViewBag.isSendEmail)
                                        {
                                            <p class="text-success">ایمیل با موفقیت ارسال شد</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">ایمیل ارسال نشد</p>
                                        }

                                    </div>
                                    <div class="alert alert-success">
                                        <h2>@Model.UserName عزیز!</h2>
                                        <p>باتشکر از ثبت نام شما، ایمیلی حاوی لینک فعالسازی برای شما ارسال شد</p>
                                    </div>
                                }
                                <h2> <i class="icon-three-dots"></i> ثبت نام در سایت </h2>

                                <div class="input-layer">
                                    <span><i class="icon-user-shape"></i> نام و نام خانوادگی </span>
                                    <input type="text" asp-for="UserName">
                                    @*<span class="text-danger" asp-validation-for="UserName"></span>*@
                                </div>

                                <div class="input-layer">
                                    <span><i class="icon-mail-envelope"></i> پست الکترونیک </span>
                                    <input type="email" asp-for="Email">
                                    @*<span class="text-danger" asp-validation-for="Email"></span>*@

                                </div>

                                @*<div class="input-layer">
                                <span><i class="icon-phone-1"></i> موبایل </span>
                                <input type="text" name="">
                                </div>*@

                                <div class="input-layer">
                                    <span><i class="icon-lock"></i> رمز عبور </span>
                                    <input type="password" asp-for="Password">
                                    @*<span class="text-danger" asp-validation-for="Password"></span>*@
                                </div>

                                <div class="input-layer">
                                    <span><i class="icon-lock"></i> تکرار رمز عبور </span>
                                    <input type="password" asp-for="RePassword">
                                    @*<span class="text-danger" asp-validation-for="RePassword"></span>*@
                                </div>



                                <div class="captcha-layer">
                                    <!-- کد کپچا در این لایه قرار بدید تا استایل بگیره-->
                                </div>

                                <input class="btn btn-success" type="submit" value="ثبت نام در سایت" />

                                <br /><br />
                                <div class="text-danger" asp-validation-summary="All">
                                </div>
                            </div>

                        </form>

                    </div>

                </div>


            </div>

        </div>

    </div>

    <partial name="_Footer" />
    <partial name="_FooterRefrences" />
    <script src="js/public.js"></script>
</body>
</html>
